<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Postuler</h3>
        </div>

        <div class="card-body">

            <div class="form-group">
                <label for="exampleInputEmail1">Nom</label>
                <input required type="text" name="nom" class="form-control">
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Prénom</label>
                <input required type="text" name="prenom" class="form-control">
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Adresse</label>
                <input required type="text" name="adress" class="form-control">
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <input required type="email" name="email" class="form-control">
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Téléphone</label>
                <input required type="tel" name="tel" class="form-control">
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Diplome</label>
                <input type="file" name="file" class="form-control">
            </div>

            <div class="form-group">
                <button style="width: 100%" type="submit" class="btn btn-success">Postuler</button>
            </div>
        </div>
    </div>
</div>
