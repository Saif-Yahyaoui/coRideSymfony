<div class="col-md-8 offset-2">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Quick Example</h3>
        </div>
        {{ form_start(form) }}
        <div class="card-body">

            <div class="form-group">
                <label for="exampleInputEmail1">Titre</label>
                {{ form_widget(form.title,{'attr':{'class' : 'form-control'}}) }}
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">DÃ©scription</label>
                {{ form_widget(form.description,{'attr':{'class' : 'form-control'}}) }}
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Adresse</label>
                {{ form_widget(form.location,{'attr':{'class' : 'form-control'}}) }}
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Salaire</label>
                {{ form_widget(form.salary,{'attr':{'class' : 'form-control'}}) }}
            </div>


            <button class="btn btn-success">{{ button_label|default('Ajouter') }}</button>
        </div>
        {{ form_end(form) }}

    </div>
</div>
